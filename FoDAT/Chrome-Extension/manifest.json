{
	"name": "Estensione Di Brodo",
	"version": "0.0.1",
	"description": "Strumenti utili a Brodo and Friends",
	"manifest_version": 2,
	"permissions": [
		"activeTab",
		"storage",
		"tabs",
	  	"notifications",
	  	"management",
		"https://*.forgeofempires.com/*"
	],

	"browser_action": {
		"default_icon": {
			"16": "images/icon16.png",
			"19": "images/icon19.png",
			"48": "images/icon48.png"
		},
		"default_popup": "content/popup.html",
		"default_title": "Estensione Di Brodo"
	},

	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"web_accessible_resources": [
		"css/web/style.css",
		"vendor/*.js",
		"js/web/*.*",
		"css/images/*.png"
	],
	
	"content_scripts": [
		{
			"matches": ["https://*.forgeofempires.com/*"],
			"exclude_globs": ["*zz0*"],
			"include_globs": ["*game*"],
			"run_at": "document_start",
			"js": [
				"js/inject.js"
			]
		}
	],

  	"externally_connectable" : {
	  	"matches": ["https://*.forgeofempires.com/*"],
	  	"ids": ["*"]
	},

	"background": {
	  	"scripts": ["js/background.js"],
	  	"persistent": true
	}
}
